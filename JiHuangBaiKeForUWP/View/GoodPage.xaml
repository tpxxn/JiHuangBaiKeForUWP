            <uc:Expander x:Name="TrinketsExpander" VerticalAlignment="Top" FontSize="17">
                <uc:Expander.Header>
                    <StackPanel Orientation="Horizontal" Height="47">
                        <TextBlock Text="玩具" Margin="10,0,0,0" FontSize="17" VerticalAlignment="Center"/>
