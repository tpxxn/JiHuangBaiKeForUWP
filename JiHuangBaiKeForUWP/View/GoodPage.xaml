                        <TextBlock Text="宠物" Margin="10,0,0,0" FontSize="17" VerticalAlignment="Center"/>
                    </StackPanel>
                </uc:Expander.Header>
                <GridView Name="GoodPetGridView" 
                          Margin="10"
