            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="GoodDataTemplate" x:DataType="datetype:Good">
            <Grid Margin="5" Width="90" Height="90">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Image Source="{x:Bind Picture}" Stretch="Uniform" />
                <TextBlock Grid.Row="1" Text="{x:Bind Name}" FontSize="13" HorizontalAlignment="Center" Foreground="White"/>
            </Grid>
        </DataTemplate>
    </Page.Resources>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel x:Name="GoodStackPanel" Background="{x:Null}">
            <uc:Expander x:Name="MaterialExpander" VerticalAlignment="Top" FontSize="17">
                <uc:Expander.Header>
                    <StackPanel Orientation="Horizontal" Height="47">
                        <TextBlock Text="材料" Margin="10,0,0,0" FontSize="17" VerticalAlignment="Center"/>
                    </StackPanel>
                </uc:Expander.Header>
                <GridView Name="GoodMaterialGridView" 
                          Margin="10"
                          ItemsSource="{x:Bind _goodMaterialData}" 
                          ItemTemplate="{StaticResource GoodMaterialDataTemplate}" 
                          SelectionMode="None" 
                          IsItemClickEnabled="True" 
                          ItemClick="GoodMaterialGridView_ItemClick" 
                          animations:ReorderGridAnimation.Duration="250"/>
            </uc:Expander>
            <uc:Expander x:Name="EquipmentExpander" VerticalAlignment="Top" FontSize="17">
                <uc:Expander.Header>
                    <StackPanel Orientation="Horizontal" Height="47">
                        <TextBlock Text="装备" Margin="10,0,0,0" FontSize="17" VerticalAlignment="Center"/>
                    </StackPanel>
                </uc:Expander.Header>
                <GridView Name="GoodEquipmentGridView" 
                          Margin="10"
                          ItemsSource="{x:Bind _goodEquipmentData}" 
                          ItemTemplate="{StaticResource GoodEquipmentDataTemplate}" 
                          SelectionMode="None" 
                          IsItemClickEnabled="True" 
                          ItemClick="GoodEquipmentGridView_ItemClick" 
                          animations:ReorderGridAnimation.Duration="250"/>
            </uc:Expander>
            <uc:Expander x:Name="SaplingExpander" VerticalAlignment="Top" FontSize="17">
